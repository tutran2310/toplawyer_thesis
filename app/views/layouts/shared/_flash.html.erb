<% Settings.flash.each do |key, value| %>
  <% unless flash[key].blank? %>
    <div class="alert <%= key[value] %>">
      <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
      <%= content_for?(:flash_errors) ? yield(:flash_errors) : flash[key] %>
    </div>
  <% end %>
<% end %>
